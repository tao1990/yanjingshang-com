           // $("#get_code").css("border", '1px solid #CCC');
            $('#get_code').val(waitime+'秒后重新获取');
            setTimeout(function(){time()},1000);
            waitime--;
        }
    }
    function get_yz_code() {
        $("#get_code").attr("disabled", true);
        var mobile = $('#username_r').val();
        var user_name =$('#user_name_y').val();
        var is_only =$('#is_only').val();
        var myreg = /^^[1][3578][0-9]{9}$/;
        if(myreg.test(mobile)){
            if(is_only==1){
                document.getElementById("m-pop-text").innerHTML="我们将发送短信验证码至<br />"+mobile;
                myPop.set(document.getElementById('myPop'));
                document.getElementById("m-pop-submit").addEventListener("click",function(){
                    myPop.unset(document.getElementById("myPop"));
                    var url = "user.php?act=msgSend";
                    $.get(url,{mobile:mobile,user_name:user_name,is_only:is_only},function(data){
                        if(data=='1'){
                            $("#get_code").attr("disabled", false);
                            $("#err_msg").text("该手机号未绑定账号");
                        }else if(data=='2'){
                            $("#err_msg").text("");
                            time();
                        }else{
                            $("#get_code").attr("disabled", false);
                            document.write(data);
                        }
                    }) 
                },false);
                document.getElementById("m-pop-cancal").addEventListener("click",function(){
                    $("#get_code").attr("disabled", false);
                },false);
            }else{
                var url = "user.php?act=msgSend";
                    $.get(url,{mobile:mobile,user_name:user_name,is_only:is_only},function(data){
                        if(data=='1'){
                            $("#get_code").attr("disabled", false);
                            $("#err_msg").text("该手机号未绑定账号");
                        }else if(data=='2'){
                            $("#err_msg").text("");
                            time();
                        }else{
                            $("#get_code").attr("disabled", false);
                            document.write(data);
                        }
                    }) 
            }
            
        }else{
            //alert("请输入有效的手机号");
            $("#err_msg").text("请输入有效的手机号");
            $("#get_code").attr("disabled", false);
        }
        return false;
    }
    // 下一步验证
    $('#next').click(function(){
        var myreg = /^(((1[0-9][0-9]{1}))+\d{8})$/;
        var percode=$('#username_r').val();
        if(percode=='' || myreg.test(percode)==false){
            $("#err_msg").text("请输入正确的手机号");
            return false;
        }
        var yzcode=$('#yz_code').val();
        if(yzcode==''){
            $("#err_msg").text("请输入验证码");
            return false;
        }else{
            var result=checkYzcode(percode,yzcode);
            if(result==0){
                $("#err_msg").text('验证码错误');
                return false;
            }
        }
        $(".step_1").hide();
        $(".step_2").show();
        $("#err_msg").text("");
    })
    // 提交验证
    $('#sub').click(function(){
        var pwd=$('#password1').val();
        var repwd=$('#confirm_password').val();
        if(pwd==''){
            $("#err_msg").text("请设置密码");
            return false;
        }else{
            if(pwd.length<6){
                $("#err_msg").text("密码长度不得少于6位");
                return false;
            }
        }
        if(repwd==''){
            $("#err_msg").text("请确认密码");
            return false;
        }else{
            if(pwd!=repwd){
                $("#err_msg").text("确认密码与密码不一致");
                return false;
            }
        }
        $("#err_msg").text("");
        var url = "user.php?act=get_password";
        var user_name =$('#user_name_y').val();
        $.post(url,{password:pwd,user_name:user_name},function(data){
            alert("密码修改成功");
            document.write(data);
        })
    })
    // 检测验证码是否正确
    function checkYzcode(mobile,code){
        var yz_url="user.php?act=check_code";
        var bool='';
        $.ajax({
            type:"GET",
            dataType:'json',
            async:false,
            url:yz_url,
            data:{mobile:mobile,code:code},
            success:function(data){
                //alert(data);
                if(data!='1'){
                    bool=0;
                }else{
                    bool=1;
                }
            }
        })
        return bool;
    }
</script>
