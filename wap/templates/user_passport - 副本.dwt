<script>
var waitime=120;
function time_reg(){
    if(waitime==0){
        $("#get_code").attr("disabled", false);
        $('#get_code').val('获取验证码');
        waitime=120;
    }else{
        $("#get_code").attr("disabled", true);
        $("#get_code").css("color", '#76D5E9');
        $('#get_code').val(waitime+'秒后重新获取');
        setTimeout(function(){time_reg()},1000);
        waitime--;
    }
}
function get_yz_code_reg() {
    $("#get_code").attr("disabled", true);
    var mobile = $('#username_r').val();
    var myreg = /^^[1][3578][0-9]{9}$/;
    if(myreg.test(mobile)){
        var url = "user.php?act=msgSendReg";
        document.getElementById("m-pop-text").innerHTML="我们将发送短信验证码至<br />"+mobile;
        myPop.set(document.getElementById('myPop'));
        document.getElementById("m-pop-submit").addEventListener("click",function(){
            myPop.unset(document.getElementById("myPop"));
            $.get(url,{mobile:mobile},function(data){
                if(data=='1'){
                    $("#get_code").attr("disabled", false);
                    $("#err_msg").text("该手机号已绑定账号");
                }else if(data=='2'){
                    $("#err_msg").text("");
                    time();
                                    
                }else{
                    $("#get_code").attr("disabled", false);
                    document.write(data);
                }
            })
        },false);
        document.getElementById("m-pop-cancal").addEventListener("click",function(){
            $("#get_code").attr("disabled", false);
        },false);
        
    }else{
        //alert("请输入有效的手机号");
        $("#err_msg").text("请输入有效的手机号");
        $("#get_code").attr("disabled", false);
    }
    return false;
}
// 提交验证
$('#reg_usersub').click(function(){
    var myreg = /^(((1[0-9][0-9]{1}))+\d{8})$/;
    var percode=$('#username_r').val();
    var pwd=$('#password1').val();
    var repwd=$('#confirm_password').val();
    if(percode=='' || myreg.test(percode)==false){
        $("#err_msg").text("请输入正确的手机号");
        return false;
    }
    var yzcode=$('#yz_code').val();
    if(yzcode==''){
        $("#err_msg").text("请输入验证码");
        return false;
    }else{
        var result=checkYzcode(percode,yzcode);
        if(result==0){
            $("#err_msg").text('验证码错误');
            return false;
        }
    }
    if(pwd==''){
        $("#err_msg").text("请设置密码");
        return false;
    }else{
        if(pwd.length < 6){
            $("#err_msg").text("密码长度不得少于6位");
            return false;
        }
    }
    if(repwd==''){
        $("#err_msg").text("请确认密码");
        return false;
    }else{
        if(pwd!=repwd){
            $("#err_msg").text("两次输入的密码不一致");
            return false;
        }
    }
    if($("#remerber").attr('checked')==false){
        $("#err_msg").text("请勾选易视网眼镜协议");
        return false;
    }
    $("#err_msg").text("");
    return true;
})
// 检测验证码是否正确
function checkYzcode(mobile,code){
    var yz_url="user.php?act=check_code_reg";
    var bool='';
    $.ajax({
        type:"GET",
        dataType:'json',
        async:false,
        url:yz_url,
        data:{mobile:mobile,code:code},
        success:function(data){
            //alert(data);
            if(data!='1'){
                bool=0;
            }else{
                bool=1;
            }
        }
    })
    return bool;
}
