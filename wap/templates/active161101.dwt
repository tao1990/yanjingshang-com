//名单滚动
$(window).load(function(){
	var $md=$('.prizer-ulist')
	var md_h=$('.prizer-wrap').height()
	var total=$md.find('li').length/3
	var md_index=0
	//console.log(md_h)
	function mdSlider(){
		if(md_index<=total-1){
			$md.css('top',-md_index*md_h+'px')
			md_index++;
		}else{
			$md.css('top','0')
			md_index=0
		}
	}
	setInterval(mdSlider,5000)
})


