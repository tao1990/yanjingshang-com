// 更改颜色
$('.J-colorSelect').each(function(){
  var $this=$(this)
  var gid=$this.attr('id').split('_')[2]
  var $goodsItem=$('#goods-'+gid)
  var $goodsThumbWrap=$goodsItem.find('.goodsItem-thumb a')
  var $goodsThumb=$goodsItem.find('.goodsItem-thumb img')
  var $goodsTitle=$goodsItem.find('.goodsItem-title a')
  var $goodsDs=$goodsItem.find('.J-dsSelect')
  var $goodsBtn=$goodsItem.find('.goodsItem-btn')
  var $goodsPrice=$goodsItem.find('.goodsItem-price b')
  $(this).change(function(){
    var id=this.options[this.selectedIndex].id
    var newId=id.split('_')[1]
    $.ajax({
      url:'active.php?id=161101&act=get_color&goods_id='+newId,
      type:'get',
      dataType:'json',
      success:function(res){
        var thumb=res.goods_thumb
        var title=res.goods_name
        var ds=res.html
        $goodsItem.attr('id','goods-'+newId)
        $goodsDs.replaceWith(ds)
        $goodsThumbWrap.attr('href','goods'+newId+'.html')
        $goodsThumb.attr('src',thumb)
        $goodsTitle.attr({'title':title,'href':'goods'+newId+'.html'}).text(title)
        $goodsTitle.attr('id','goods_'+newId)
        $goodsBtn.attr('href',"javascript:addGoods("+newId+");")
      }
    })
  })
})

// 导航悬浮
$(window).load(function(){
	var $fixNav=$('.goodsNavBar')
	var navTop=parseInt($fixNav.offset().top)
	$(window).scroll(function(){
		var sTop=document.documentElement.scrollTop || document.body.scrollTop
		if(parseInt(sTop)>=navTop){
			$fixNav.addClass('fixed')
		}else{
			$fixNav.removeClass("fixed")
		}
	})
})


