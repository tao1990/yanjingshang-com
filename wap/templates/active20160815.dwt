<script>
// 秒杀模块 status: -1(已结束) 0(秒杀中) 1(未开始)
function renderMs(data,tpl){
	var o=data
	var newStr=''
	var timeImg=o.timeImg,
		timeImg2=o.timeImg2,
		bgImg=o.bgImg,
		status=o.status,
		link=o.link;
	var goodsStr='';  // 产品字符串
	if(status==-1){
		goodsStr+="<span class='ms-back'></span>"
	}else if(status==1){
		goodsStr+="<span class='ms-next'></span>"
	}else{
		goodsStr+="<a href='"+link+"' target='blank'></a>"
	}
	newStr=tpl.replace(/{{timeImg}}/g,timeImg).replace(/{{timeImg2}}/g,timeImg2).replace(/{{bgImg}}/g,bgImg).replace(/{{content}}/g,goodsStr)
	return newStr
}
// 打开即请求
$(function(){
	//console.log('aaaa')
	$.ajax({
		url:'ajax_active.php?act=get_status_160815',
		type:'get',
		success:function(res){
			//console.log(res)
			var str=renderMs(res,$('#msTpl').html())
			$('#miaosha').html(str);
		},
		error:function(){
			console.log('error')
		}
	})
});

$(window).load(function(){
	oFixed({
		elem:document.getElementById('pageNav-lists')
	})
})
window.addEventListener('load',luckyer_slide,false);

function luckyer_slide(){
	var ulist=document.getElementById('pricer-ulist');
	function slide(){
		ulist.classList.add('ani');
		setTimeout(function(){
			ulist.appendChild(ulist.getElementsByTagName('li')[0]);
			ulist.classList.remove('ani');
		},1000);
	}
	setInterval(slide,3000);
}
	
// 获取数据 status:0不符合 1抽奖成功 2已经抽过
function getData(order,callback){
	$.ajax({
		type:'POST',
		url:'ajax_active.php?act=get_price_160801',
		dataType:'json',
		data:{order:order},
		success:function(res){
			callback(res);
		}
	})
}

// 生成随机数
function createNum(a,b){
	return Math.round(Math.random()*(b-a)+a);
}

// 状态
var clicked=false;

$(function(){

	// 抽奖动画
	function lottery(id,name){
		var prizes=[30,90,150,210,270,330];	// 所有奖品的角度集合 *按逆时针排序
		// 产生一个3-5随机数
		var round=createNum(3,5);
		$('#rotate').rotate({
			angle:0,
			animateTo:round*360+prizes[id],
			duration:3000,
			callback:function(){
				alert('恭喜您获得'+name);
				clicked=false;
			}
		});
	}

	// 点击事件
	$('#lottery-btn').click(function(){
		// 状态管理
		if(clicked) return;
		clicked=true;

		// 判断订单号是否符合规定
		var order=$.trim($('#lotteryIpt').val());
		if(!order || isNaN(order)){
			alert('订单号格式错误！');
			clicked=false;
			return;
		}

		// 获取数据，并返回结果
		getData(order,function(res){
			$('#lotteryIpt').val('') // 清空输入框
			if(res.status==0){
				alert('无效的订单号！');
				clicked=false;
			}else if(res.status==2){
				alert('您已经抽过奖啦！');
				clicked=false;
			}else if(res.status==3){
				alert('请登陆后再试！');
				clicked=false;
			}else if(res.status==1){
				lottery(res.id,res.name);
			}
		})
	})
})	

function get_bonus(bonus_id){
    $.ajax({
        type:'POST',
        url:'ajax_active.php?act=get_bonus_160801',
        data:'&bonus_id='+bonus_id+'&m='+Math.random(),
        cache:false,
        success:
                function(da)
                {
                    if(da == 1){
                        alert('您已成功领取优惠券！请至我的红包/优惠券查看^_^');
                    }else if(da == 2){
                        alert('请登录后再试^_^');
                    }else if(da == 3){
                        alert('您已领取过该优惠券^_^');
                    }
                }
    });
}
