<script>
    /** fastClick **/
    window.addEventListener('load',function(){
        //FastClick.attach(document.body);

        try{
            document.getElementById('gdSelectInfo-btn').addEventListener('click',function(){
                layer.open({
                    content:document.getElementById('tpl-gd-bg').innerHTML,
                    shadow:1,
                    closeBtns:['gd-btn'],
                    effect:3,
                    position:{
                        posArr:['center','bottom']
                    }
                })
            },false);

            document.getElementById('ygdSelect-btn').addEventListener('click',function(){
                var index_mlayer=layer.open({
                    content:document.getElementById('tpl-ygd-bg').innerHTML,
                    shadow:1,
                    effect:3,
                    position:{
                        posArr:['center','bottom']
                    },
                    submit:['ygd-btn',function(){
                        console.log('success');
                        layer.close(index_mlayer)
                    }]
                })
            },false);
        }catch(e){

        }

        // 触屏滚动
        var goodsSliderBox=document.getElementById('goodsAttr-sliderbox'),
                width=parseInt(goodsSliderBox.clientWidth),
                goodsSliders=document.getElementById('goodsAttr-sliders'),
                baseWidth=parseInt(goodsSliders.getElementsByTagName('li')[0].clientWidth)+10,
                len=goodsSliders.getElementsByTagName('li').length;
        TmAble.init(goodsSliders,{
            Y:false,
            endCallback:function(){
                var _width=len*baseWidth,
                        left=parseInt(goodsSliders.style.left);
                if(left>=0){
                    goodsSliders.style.left="0";
                }
                if(left<=-(_width-width)){
                    goodsSliders.style.left=-(_width-width)+"px";
                }
            }
        });


    },false);
</script>
