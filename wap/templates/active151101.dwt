<script>
    // 倒计时
    var countdown=new CountDown("2015/11/02 0:00",{
        hour_box:document.getElementById("hourbox"),
        minute_box:document.getElementById("minutebox"),
        second_box:document.getElementById("secondbox")
    });
    // 选项卡
    var tab=new Tab({
        navs:document.querySelectorAll(".tj-title span"),
        tabs:document.querySelectorAll(".tj-goodsbox")
    });
    //点击动画
    var btns=document.querySelectorAll(".tj-title span");
    btns=Array.prototype.slice.call(btns,0);
    btns.forEach(function(btn){
        btn.addEventListener("click",function(){
            btns.forEach(function(_btn){
                _btn.classList.remove("run");
            });
            this.className="run";
        },false);
    })
    

</script>
