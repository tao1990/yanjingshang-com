<script>
;(function(){
	// 配置信息
	var options={
		indexRange:[3,6],	// 开始加速或减速的范围
		roundRange:[3,4],	// 旋转的圈数范围
		interval:500,		// 初始速度
		num:10				// 奖品个数
	}

	// 声明相关变量
	var interval=options.interval,	// 间隔
		index,	// 位置
		fast,	// 开始加速或减速的位置
		round,	// 剩余圈数
		luckys,	// 奖品
		started=false;	// 是否开始

	// 随机数
	function range(arr){
		var n=Math.round(Math.random()*(arr[1]-arr[0])+arr[0]);
		return n;
	}	

	// 抽奖过程
	function lucky(){
		// 圈数计数
		if(index>options.num){
			index=1;
			round--;
		}

		// 状态显示
		var items=document.querySelectorAll('.item-lucky');
		Array.prototype.slice.call(items,0).forEach(function(item){
			item.classList.remove('current');
		});
		document.getElementById('lucky-'+index).classList.add('current');

		// 开始加速
		if(index>fast){
			interval=200;
		}

		// 开始减速
		if(round==0 && luckys.id-index<fast){
			interval+=200;
		}
		
		if(round<=0 && index==luckys.id){
			// 选中奖品，结束
			clearTimeout(luckyMover);
			setTimeout(function(){alert("恭喜获得"+luckys.name)},1000);
			started=false;
		}else{
			// 没有结束
			luckyMover=setTimeout(lucky,interval);
		}
		index++;
	}

	// 开始抽奖
	function start(){
	    // 获取订单号
        var order=$('#order').val();
        if(order > 0){
            if(started){
                return;
            }
            started=true;
            index=1;
            fast=range(options.indexRange);
            round=range(options.roundRange);
            var xhr=new XMLHttpRequest();
            xhr.open('get',"ajax_active.php?act=160301&order_sn="+order,true);
            xhr.send(null);
            xhr.onreadystatechange=function(){
                if(xhr.status==200 && xhr.readyState==4){
                    luckys=JSON.parse(xhr.responseText);
                    if(luckys.err){
                        started=false;
                        alert(luckys.err);
                    }else{
                        lucky();
                    }
                }
            }
        }else{
            alert("请输入订单号进行抽奖！");return false;
        }
	}

	// 绑定事件
	document.getElementById('btn-lucky').addEventListener('click',start,false);

})();    

// 名单滚动
window.addEventListener('load',luckyer_slide,false);

function luckyer_slide(){
	var ulist=document.getElementById('ulist-slide');
	function slide(){
		ulist.classList.add('ani');
		setTimeout(function(){
			ulist.appendChild(ulist.getElementsByTagName('li')[0]);
			ulist.appendChild(ulist.getElementsByTagName('li')[0]);
			ulist.classList.remove('ani');
		},1000);
	}
	setInterval(slide,3000);
}

</script>
