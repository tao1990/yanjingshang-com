.box-items{background:#be3434;font-family:'Microsoft Yahei';overflow:hidden;}
.box-items .item{width:15.75rem;float:left;margin-bottom:.5rem;position:relative;}
.box-items .item:nth-child(even){float:right;}
.box-items .image{height:16rem;line-height:16rem;text-align:center;background:#fff;padding:.5rem;}
.box-items .layer{width:5rem;text-align:center;padding:.25rem;box-sizing:border-box;position:absolute;left:.5rem;top:0;background:#fa3458;color:#fff;font-size:1.1rem;}
.box-items .image img{vertical-align:middle;max-height:100%;}
.box-items .text{color:#fffbdd;font-size:1.1rem;}
.box-items .text p{color:#fffbdd;}
.box-items .text h3{font-size:1.2rem;background:#190334;color:#fff;font-weight:100;padding:.25rem;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.box-items .box-price{padding:.5rem;background:#750d0c url(http://img.easeeyes.com/promotion/20160121/buy_btn.jpg) no-repeat 10rem 1.5rem;background-size:5rem auto;overflow:hidden;}
.box-items .box-price .txt{text-align:center;}
.box-items .box-price b{font-size:1.3rem;}
.box-items .box-price ._price{float:left;padding:1rem 0 0 .5rem;}
.box-nav{font-size:0;text-align:center;padding:.5rem 0 1rem;background:#f9c79f;}
.box-nav span{display:inline-block;font-size:1.2rem;width:7.7rem;height:2.05rem;line-height:2.05rem;background:url(http://file.easeeyes.com/wap/images/20160121/2.png) no-repeat center;background-size:100% auto;color:#972220;}
