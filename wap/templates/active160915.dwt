// 抽奖
;(function(){
	// 配置信息
	var options={
		indexRange:[3,6],	// 开始加速或减速的范围
		roundRange:[3,4],	// 旋转的圈数范围
		interval:500,		// 初始速度
		num:8				// 奖品个数
	}

	// 声明相关变量
	var interval=options.interval,	// 间隔
		index,	// 位置
		fast,	// 开始加速或减速的位置
		round,	// 剩余圈数
		luckys,	// 奖品
		started=false;	// 是否开始

	// 随机数
	function range(arr){
		var n=Math.round(Math.random()*(arr[1]-arr[0])+arr[0]);
		return n;
	}	

	// 抽奖过程
	function lucky(){
		// 圈数计数
		if(index>options.num){
			index=1;
			round--;
		}

		// 状态显示
		var items=$('.item-lucky');
		items.each(function(){
			$(this).removeClass('current');
		});
		$('#lucky-'+index).addClass('current');

		// 开始加速
		if(index>fast){
			interval=200;
		}

		// 开始减速
		if(round==0 && luckys.id-index<fast){
			interval+=200;
		}
		
		if(round<=0 && index==luckys.id){
			// 选中奖品，结束
			clearTimeout(luckyMover);
			setTimeout(function(){
				alert("恭喜获得"+luckys.name)
			},1000)
			started=false;
		}else{
			// 没有结束
			luckyMover=setTimeout(lucky,interval);
		}
		index++;
	}

	// 开始抽奖
	function start(){
		if(started){
			return;
		}
		started=true;
		index=1;
		fast=range(options.indexRange);
		round=range(options.roundRange);
		$.ajax({
			url:'ajax_active.php?act=get_price_160915',
			type:"get",
			dataType:"json",
			success:function(d){
                if(d.err){
                    started=false;
                    alert(d.err);
                }else{
                    luckys=d;
                    lucky();
                }

			}
		})
		
	}

	// 绑定事件
	$('#btn-lucky').click(function(){
      start();
	});

})();	

// 名单滚动
